<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppX.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Hello, World!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to .NET Multi-platform App UI"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="ShowPopupButton"
                Text="Show Bottom Popup"
                Clicked="ShowPopupButton_Clicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="ShowCenterPopupButton"
                Text="Show Center Popup"
                Clicked="ShowCenterPopupButton_Clicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="ShowTopPopupButton"
                Text="Show Top Popup"
                Clicked="ShowTopPopupButton_Clicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="ShowLeftPopupButton"
                Text="Show Left Popup"
                Clicked="ShowLeftPopupButton_Clicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="ShowRightPopupButton"
                Text="Show Right Popup"
                Clicked="ShowRightPopupButton_Clicked"
                HorizontalOptions="Center" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
